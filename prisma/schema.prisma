generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  password      String
  emailVerified DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  medicines     Medicine[]
}

model Medicine {
  id               String    @id @default(uuid())
  name             String
  dosage           String
  unit             String
  frequency        String
  start            DateTime
  end              DateTime?
  description      String?
  userId           String
  lastAdministered DateTime?
  user             User      @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
