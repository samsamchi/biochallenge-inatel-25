generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  patients      Patient[]
}

model Patient {
  id          String     @id @default(uuid())
  name        String
  medicines   Medicine[]
  caretakerId String
  caretaker   User       @relation(fields: [caretakerId], references: [id])
}

model Medicine {
  id               String    @id @default(uuid())
  name             String
  dosage           String
  unit             String
  frequency        String
  start            DateTime
  end              DateTime?
  description      String?
  userId           String
  lastAdministered DateTime?
  patient          Patient   @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
